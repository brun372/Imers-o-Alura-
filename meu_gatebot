        "import google.generativeai as genai\n",
        "import os\n",
        "\n",
        "def gatebot():\n",
        "    print(\"🌟 Ei! Tudo bem? Eu sou o GATEBOT, seu parceiro virtual. 😉\")\n",
        "    print(\"Tô aqui pra trocar ideia e te ajudar no que for possível!\")\n",
        "    print(\"\\nVamos começar? Me conta em qual dessas áreas você mais precisa de uma força:\")\n",
        "    print(\"1 - 💻 Tecnologia (TI)\")\n",
        "    print(\"2 - 🏥 Saúde e bem-estar\")\n",
        "    print(\"3 - 📚 Estudos e Educação\")\n",
        "    print(\"4 - 💸 Dinheiro e Finanças\")\n",
        "    print(\"5 - 🤔 Outra coisa\")\n",
        "\n",
        "    escolha = input(\"Digite o número da sua escolha: \")\n",
        "\n",
        "    area_escolhida = \"\"\n",
        "\n",
        "    if escolha == \"1\":\n",
        "        area_escolhida = \"Tecnologia (TI)\"\n",
        "        print(\"\\nShow! Você escolheu TI. Eu também curto tecnologia! 😎\")\n",
        "        print(\"Manda aí sua dúvida... pode ser sobre programação, redes, banco de dados, essas paradas.\")\n",
        "    elif escolha == \"2\":\n",
        "        area_escolhida = \"Saúde e bem-estar\"\n",
        "        print(\"\\nSaúde é tudo, né? 💚 Que bom que você se importa com isso!\")\n",
        "        print(\"Me diz como posso te ajudar: alimentação, exercícios, rotina... tô aqui!\")\n",
        "    elif escolha == \"3\":\n",
        "        area_escolhida = \"Estudos e Educação\"\n",
        "        print(\"\\nEstudar é chave pra conquistar seus sonhos! 📖🎓\")\n",
        "        print(\"Quer dicas pra aprender melhor, estudar sem sono, ou montar um cronograma?\")\n",
        "    elif escolha == \"4\":\n",
        "        area_escolhida = \"Dinheiro e Finanças\"\n",
        "        print(\"\\nDinheiro é importante, e cuidar dele é essencial! 💵\")\n",
        "        print(\"Quer saber sobre economizar, investir ou organizar seu mês?\")\n",
        "    elif escolha == \"5\":\n",
        "        area_escolhida = \"Outra coisa\"\n",
        "        print(\"\\nBeleza! Manda sua dúvida que eu tento te ajudar do meu jeitinho 🤗\")\n",
        "    else:\n",
        "        print(\"\\nHmm... acho que essa opção não existe. Roda de novo o GATEBOT, por favor! 🙃\")\n",
        "        return\n",
        "\n",
        "    # --- Configuração da API do Google Gemini ---\n",
        "    # **** COLOQUE SUA CHAVE DE API AQUI! ****\n",
        "    # Substitua \"SUA_CHAVE_API_AQUI\" pela sua chave real,\n",
        "    # obtida em: https://aistudio.google.com/app/apikey\n",
        "    API_KEY = \"AIzaSyA2vJ_m3MH9GF3Yg1pacPuJlp56HfppuLQ\"\n",
        "\n",
        "    if API_KEY == \"SUA_CHAVE_API_AQUI\" or not API_KEY:\n",
        "        print(\"\\n❌ ERRO: Sua chave de API não foi configurada! Por favor, obtenha uma chave em https://aistudio.google.com/app/apikey\")\n",
        "        print(\"e substitua 'SUA_CHAVE_API_AQUI' no código pela sua chave real.\")\n",
        "        print(\"O GATEBOT não conseguirá responder perguntas complexas sem a API configurada.\")\n",
        "        return\n",
        "\n",
        "    genai.configure(api_key=API_KEY)\n",
        "\n",
        "    # Inicializa o modelo Gemini\n",
        "    model = genai.GenerativeModel('gemini-1.5-flash')\n",
        "\n",
        "    # --- Loop para múltiplas perguntas ---\n",
        "    while True:\n",
        "        pergunta = input(\"\\nAgora me conta: qual é a sua dúvida ou problema? (Digite 'experty' para encerrar) \")\n",
        "\n",
        "        if pergunta.lower() == 'experty':\n",
        "            print(\"\\n👋 Foi ótimo conversar com você! Até a próxima! 😊\")\n",
        "            break\n",
        "\n",
        "        print(\"\\n🤔 Deixa eu pensar um pouquinho...\")\n",
        "\n",
        "        try:\n",
        "            # --- MUDANÇA AQUI: Instruções no prompt para uma resposta longa e formatada! ---\n",
        "            prompt = (\n",
        "                f\"Você é um assistente virtual chamado GATEBOT. O usuário escolheu a área de '{area_escolhida}'. \"\n",
        "                \"Responda à seguinte pergunta de forma útil, amigável, **completa e detalhada**, \"\n",
        "                \"mas sempre organizando o texto com **parágrafos claros e, se possível, listas ou tópicos** para facilitar a leitura. \"\n",
        "                \"Use negritos para destacar informações importantes. \"\n",
        "                \"Mantenha um tom acessível, como se estivesse explicando para alguém que está começando. \"\n",
        "                \"Se a pergunta for sobre um tópico fora de '{area_escolhida}', mencione isso de forma clara e breve antes de prosseguir com a resposta. \"\n",
        "                f\"Pergunta: {pergunta}\"\n",
        "            )\n",
        "\n",
        "            response = model.generate_content(prompt)\n",
        "\n",
        "            if response.text:\n",
        "                print(f\"💬 Resposta GATEBOT: {response.text}\")\n",
        "            else:\n",
        "                print(\"💬 Resposta GATEBOT: Hummm, não consegui gerar uma resposta para isso agora. Tente de novo com uma pergunta diferente!\")\n",
        "\n",
        "        except Exception as e:\n",
        "            print(f\"💬 Resposta GATEBOT: Desculpe, algo deu errado ao tentar obter uma resposta (Erro: {e}). Verifique sua conexão com a internet e se sua chave de API está correta e ativa.\")\n",
        "            print(\"Lembre-se que o uso da API pode ter limites de requisição.\")\n",
        "\n",
        "# Rodar o GATEBOT\n",
        "gatebot()"
